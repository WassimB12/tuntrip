
{% extends 'base.html.twig' %}

{% block content %}

    <section class="contact py-lg-4 py-md-3 py-sm-3 py-3" id="contact">
    <div style="margin-top: 1rem;">
        <div style="margin-top: 1rem;">
            <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
                <h1>Ajouter offre de transport</h1>
            </div>
        </div>


        <div class="row" style="height: 50rem;">
            <div class="offset-md-2 col-md-8">
                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}

                <label for="inputText" class="col-4 col-form-label">id</label>
                <div class="col-sm-10">
                    {{ form_widget(f.id,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(f.id,{'attr':{'class':'text-danger'}}) }}

                </div>

                    <label for="inputText" class="col-4 col-form-label">Type</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.type,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(f.type,{'attr':{'class':'text-danger'}}) }}

                    </div>



                    <label for="inputText"  class="col-4 col-form-label">capacite</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.capacite,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(f.capacite,{'attr':{'class':'text-danger'}}) }}

                    </div>

                    <label for="inputText" class="col-4 col-form-label">numéro de chauffeur</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.numchauffeur,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(f.numchauffeur,{'attr':{'class':'text-danger'}}) }}

                    </div>

                    <label for="inputText" class="col-4 col-form-label">Immatricule</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.immatricule,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(f.immatricule,{'attr':{'class':'text-danger'}}) }}

                    </div>

                    <label for="inputText" class="col-4 col-form-label">Disponabilité</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.dispo,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(f.dispo,{'attr':{'class':'text-danger'}}) }}

                    </div>

                    <label for="inputText" class="col-4 col-form-label">Lieu de disponabilité</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.lieudispo,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(f.lieudispo,{'attr':{'class':'text-danger'}}) }}

                    </div>


                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.Confirmer,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

            </div>

        </div>



    </div>
    </section>
{% endblock %}